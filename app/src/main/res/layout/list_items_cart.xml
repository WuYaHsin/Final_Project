<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="140dp"
        android:layout_height="140dp"
        android:layout_margin="5dp"
        app:srcCompat="@drawable/background" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView23"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_marginStart="5dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="#0000EE" />

    <TextView
        android:id="@+id/textView25"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_toEndOf="@id/imageView3"
        android:layout_below="@+id/textView24"
        android:text="可買數量:"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textView26"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/textView25"
        android:layout_below="@+id/textView24"
        android:text="TextView"
        android:textSize="16sp" />

    <Button
        android:id="@+id/button12"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/imageView3"
        android:layout_below="@+id/textView25"
        android:backgroundTint="@color/third"
        android:text="-"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView27"
        android:layout_width="70dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/button12"
        android:layout_below="@+id/textView25"
        android:background="@drawable/my_textview"
        android:layout_marginStart="5dp"
        android:textAlignment="center"
        android:gravity="center"
        android:text="1"
        android:textSize="20sp" />

    <Button
        android:id="@+id/button13"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/textView27"
        android:layout_below="@+id/textView25"
        android:backgroundTint="@color/third"
        android:text="+"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/button14"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_marginTop="2dp"
        android:layout_gravity="center"
        android:layout_toEndOf="@id/button13"
        android:layout_below="@+id/textView25"
        android:background="@drawable/my_textview_del"
        android:src="@drawable/baseline_delete_24" />

</RelativeLayout>